/* addWebsite.wxss */

.aw_title {
  text-align: center;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.aw_title text {
  font-size: 16px;
  font-weight: bold;
}

.ipt_box {
  margin-bottom: 10px;
}

.ipt_box label {
  font-family: '黑体';
}

.ipt_box .small {
  font-size: 12px;
  color: #900;
}

.ipt {
  border: 1px solid #ddd;
  border-radius: 5px;
  box-sizing: border-box;
  height: 32px;
  line-height: 32px;
  padding: 0 10px;
  margin: 5px 0;
}

.ipt input {
  height: 100%;
  line-height: 100%;
}

.section {
  margin-bottom: 10px;
}

.section text {
  display: block;
  margin-right: 10px;
  float: left;
  height: 30px;
  line-height: 30px;
}

.picker {
  width: 30%;
  height: 30px;
  border: 1px solid #ddd;
  line-height: 30px;
  border-radius: 5px;
  text-align: center;
  position: relative;
  display: inline-block;
}

.p_text {
  margin-left: -20px;
}

.pull_icon {
  width: 10px;
  height: 10px;
  position: absolute;
  top: 8px;
  right: 10px;
}

.save_box{
  margin: 20px 0;
  border-top: 1px solid #ddd;
  padding: 20px 0;
}
.save_box button{
  font-size: 14px;
  width: 60px;
  margin-left: 5px;
  float:right;
}
button.save{
  color: #fff;
  background: #1ab394;
}
